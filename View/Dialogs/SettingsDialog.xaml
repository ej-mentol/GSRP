<Window x:Class="GSRP.Views.Dialogs.SettingsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        xmlns:models="clr-namespace:GSRP.Models"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        Title="Settings"
        Width="800" 
        Height="700"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize">

    <Window.Resources>
        <ObjectDataProvider x:Key="IconCornerEnumValues" 
                          MethodName="GetValues" 
                          ObjectType="{x:Type sys:Enum}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="models:IconCorner"/>
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>

        <Style TargetType="ToolTip">
            <Setter Property="Background" Value="#333337"/>
            <Setter Property="Foreground" Value="#f2f2f2"/>
            <Setter Property="BorderBrush" Value="#4a4a4e"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,5"/>
            <Setter Property="FontSize" Value="13"/>
        </Style>

        <Style x:Key="CompactButton" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="FontSize" Value="13"/>
        </Style>

        <Style x:Key="CompactDangerButton" TargetType="Button" BasedOn="{StaticResource DangerButton}">
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="FontSize" Value="13"/>
        </Style>

        <Style x:Key="CompactSecondaryButton" TargetType="Button" BasedOn="{StaticResource SecondaryButton}">
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="FontSize" Value="13"/>
        </Style>

        <Style x:Key="ModernListBox" TargetType="ListBox">
            <Setter Property="Background" Value="#262629"/>
            <Setter Property="BorderBrush" Value="#2d2e33"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Foreground" Value="#f2f2f2"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <ScrollViewer Padding="4" VerticalScrollBarVisibility="Auto" Style="{StaticResource {x:Type ScrollViewer}}">
                                <ItemsPresenter/>
                            </ScrollViewer>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="ItemContainerStyle">
                <Setter.Value>
                    <Style TargetType="ListBoxItem">
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="Foreground" Value="#f2f2f2"/>
                        <Setter Property="Padding" Value="8,4"/>
                        <Setter Property="FontSize" Value="14"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="ListBoxItem">
                                    <Border Background="{TemplateBinding Background}"
                                            CornerRadius="4"
                                            Margin="2"
                                            Padding="{TemplateBinding Padding}">
                                        <ContentPresenter/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter Property="Background" Value="#3b82f6"/>
                                        </Trigger>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#40FFFFFF"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="TextBox" BasedOn="{StaticResource {x:Type TextBox}}">
            <Setter Property="ContextMenu">
                <Setter.Value>
                    <ContextMenu Style="{StaticResource ThemedContextMenu}">
                        <MenuItem Command="ApplicationCommands.Cut" Header="Cut" Style="{StaticResource ThemedMenuItem}">
                            <MenuItem.Icon>
                                <Border Background="#ef4444" CornerRadius="3" Width="16" Height="16">
                                    <TextBlock Text="✂️" Foreground="White" FontSize="10" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </MenuItem.Icon>
                        </MenuItem>
                        <MenuItem Command="ApplicationCommands.Copy" Header="Copy" Style="{StaticResource ThemedMenuItem}">
                            <MenuItem.Icon>
                                <Border Background="#3b82f6" CornerRadius="3" Width="16" Height="16">
                                    <TextBlock Text="📋" Foreground="White" FontSize="10" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </MenuItem.Icon>
                        </MenuItem>
                        <MenuItem Command="ApplicationCommands.Paste" Header="Paste" Style="{StaticResource ThemedMenuItem}">
                            <MenuItem.Icon>
                                <Border Background="#10b981" CornerRadius="3" Width="16" Height="16">
                                    <TextBlock Text="📄" Foreground="White" FontSize="10" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </MenuItem.Icon>
                        </MenuItem>
                        <Separator/>
                        <MenuItem Command="ApplicationCommands.SelectAll" Header="Select All" Style="{StaticResource ThemedMenuItem}">
                            <MenuItem.Icon>
                                <Border Background="#60a5fa" CornerRadius="3" Width="16" Height="16">
                                    <ui:FontIcon Glyph="&#xE8B3;" FontSize="10" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </MenuItem.Icon>
                        </MenuItem>
                        <MenuItem Command="ApplicationCommands.Delete" Header="Delete" Style="{StaticResource ThemedMenuItem}">
                            <MenuItem.Icon>
                                <Border Background="#ef4444" CornerRadius="3" Width="16" Height="16">
                                    <ui:FontIcon Glyph="&#xE74D;" FontSize="10" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </MenuItem.Icon>
                        </MenuItem>
                    </ContextMenu>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border Background="#1e1f23" CornerRadius="12" BorderBrush="#2d2e33" BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" Background="#141518" CornerRadius="12,12,0,0" 
                    BorderThickness="0,0,0,1" BorderBrush="#2d2e33" 
                    Padding="20,12" MouseLeftButtonDown="Header_MouseLeftButtonDown">
                <Grid>
                    <TextBlock Text="Settings" Style="{StaticResource HeaderText}" VerticalAlignment="Center"/>
                    <Button Style="{StaticResource CloseButton}" 
                            HorizontalAlignment="Right"
                            Click="CloseButton_Click">
                        <TextBlock Text="✕" Foreground="#a6a8ab" FontSize="10"/>
                    </Button>
                </Grid>
            </Border>

            <!-- Content -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" Style="{StaticResource {x:Type ScrollViewer}}">
                <StackPanel Margin="24">
                    
                    <!-- Report & Servers Section -->
                    <Grid Margin="0,0,0,24">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="24"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*" MinHeight="200"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Headers -->
                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Report Template" Style="{StaticResource HeaderText}" Margin="0,0,0,8"/>
                        <TextBlock Grid.Row="0" Grid.Column="2" Text="Servers" Style="{StaticResource HeaderText}" Margin="0,0,0,8"/>

                        <!-- Sub-Headers -->
                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Variables: ${ServerName}, ${SteamId}, etc." Style="{StaticResource SubtleText}" Margin="0,0,0,8"/>

                        <!-- Main Content -->
                        <TextBox Grid.Row="2" Grid.Column="0" Grid.RowSpan="2" x:Name="ReportTemplateTextBox"
                                 Style="{StaticResource MultilineTextBox}"
                                 Text="Where: ${ServerName}&#x0a;SteamID: ${SteamId}&#x0a;Who: ${PlayerName}&#x0a;Whats Happened: ${Details}"/>
                        
                        <ListBox Grid.Row="2" Grid.Column="2" x:Name="ServersListBox" Style="{StaticResource ModernListBox}"/>

                        <!-- Footers -->
                        <Grid Grid.Row="3" Grid.Column="2" Margin="0,12,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="8"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="8"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBox x:Name="ServerNameTextBox" Grid.Column="0"/>
                            <Button x:Name="AddServerButton" Grid.Column="2" Content="Add" Style="{StaticResource CompactButton}"/>
                            <Button x:Name="RemoveServerButton" Grid.Column="4" Content="Remove" 
                                    Style="{StaticResource CompactDangerButton}" Click="RemoveServerButton_Click"/>
                        </Grid>
                    </Grid>

                    <!-- Folders Section -->
                    <StackPanel Margin="0,0,0,24">
                        <TextBlock Text="Folders" Style="{StaticResource HeaderText}" Margin="0,0,0,12"/>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="8"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="8"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Screenshots:" Style="{StaticResource SubtleText}" VerticalAlignment="Center"/>
                            <TextBox x:Name="ScreenshotsFolderTextBox" Grid.Row="0" Grid.Column="1" Margin="12,0,0,0"/>
                            <Button Grid.Row="0" Grid.Column="3" Content="Browse" Style="{StaticResource CompactSecondaryButton}" Click="BrowseScreenshotsFolder_Click"/>

                            <TextBlock Grid.Row="2" Grid.Column="0" Text="Videos:" Style="{StaticResource SubtleText}" VerticalAlignment="Center"/>
                            <TextBox x:Name="VideosFolderTextBox" Grid.Row="2" Grid.Column="1" Margin="12,0,0,0"/>
                            <Button Grid.Row="2" Grid.Column="3" Content="Browse" Style="{StaticResource CompactSecondaryButton}" Click="BrowseVideosFolder_Click"/>
                        </Grid>
                    </StackPanel>

                    <!-- Steam API Section -->
                    <StackPanel Margin="0,0,0,24">
                        <TextBlock Text="Steam API" Style="{StaticResource HeaderText}" Margin="0,0,0,12"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="8"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="API Key:" Style="{StaticResource SubtleText}" VerticalAlignment="Center"/>
                            <TextBlock x:Name="ApiKeyStatusText" Grid.Column="1" Text="No API Key Saved" FontWeight="Medium" Margin="12,0,0,0" VerticalAlignment="Center"/>
                            <Button x:Name="ChangeApiKeyButton" Grid.Column="2" Content="Change / Add Key" Style="{StaticResource SecondaryButton}" Click="ChangeApiKeyButton_Click"/>
                            <Button x:Name="DeleteApiKeyButton" Grid.Column="4" Content="Delete Key" Style="{StaticResource DangerButton}" Click="DeleteApiKeyButton_Click"/>
                        </Grid>

                        <CheckBox IsChecked="{Binding CurrentSettings.EnablePeriodicVacCheck, Mode=TwoWay}" 
                                  Margin="0,12,0,0"
                                  Content="Enable periodic VAC status checks">
                            <CheckBox.ToolTip>
                                <ToolTip>
                                    <TextBlock Text="When processing a player list, automatically re-check players whose VAC status&#x0a;hasn't been updated in over 24 hours. Requires an API key."/>
                                </ToolTip>
                            </CheckBox.ToolTip>
                        </CheckBox>
                    </StackPanel>

                    <!-- Appearance Section -->
                    <StackPanel Margin="0,0,0,24">
                        <TextBlock Text="Appearance" Style="{StaticResource HeaderText}" Margin="0,0,0,12"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="24"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0" Text="Icon Corner:" Style="{StaticResource SubtleText}" VerticalAlignment="Center"/>
                            <ComboBox x:Name="IconCornerComboBox" 
                                      Grid.Column="1" 
                                      Margin="12,0,0,0" 
                                      HorizontalAlignment="Left"
                                      MinWidth="150"
                                      ItemsSource="{Binding Source={StaticResource IconCornerEnumValues}}"/>

                            <TextBlock Grid.Column="3" Text="Icon Offset:" Style="{StaticResource SubtleText}" VerticalAlignment="Center"/>
                            <TextBox x:Name="IconOffsetTextBox" 
                                     Grid.Column="4" 
                                     Margin="12,0,0,0" 
                                     Width="60"
                                     HorizontalAlignment="Left"
                                     HorizontalContentAlignment="Center"
                                     ToolTip="Icon offset in pixels (0-8)"/>
                            <TextBlock Grid.Column="5" Text="px" Style="{StaticResource SubtleText}" VerticalAlignment="Center" Margin="4,0,0,0"/>
                        </Grid>
                    </StackPanel>

                    <!-- Console Settings Section -->
                    <StackPanel>
                        <TextBlock Text="Console Settings" Style="{StaticResource HeaderText}" Margin="0,0,0,12"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="24"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="24"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0" Text="Listen Port:" Style="{StaticResource SubtleText}" VerticalAlignment="Center"/>
                            <TextBox x:Name="UdpListenPortTextBox" Grid.Column="1" Margin="12,0,0,0" Width="80" HorizontalContentAlignment="Center"/>
                            
                            <TextBlock Grid.Column="3" Text="Send Port:" Style="{StaticResource SubtleText}" VerticalAlignment="Center"/>
                            <TextBox x:Name="UdpSendPortTextBox" Grid.Column="4" Margin="12,0,0,0" Width="80" HorizontalContentAlignment="Center"/>

                            <TextBlock Grid.Column="6" Text="Send Address:" Style="{StaticResource SubtleText}" VerticalAlignment="Center"/>
                            <TextBox x:Name="UdpSendAddressTextBox" Grid.Column="7" Margin="12,0,0,0"/>
                        </Grid>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>

            <!-- Footer Buttons -->
            <Border Grid.Row="2" BorderThickness="0,1,0,0" BorderBrush="#2d2e33" Padding="20,12">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="Cancel" Style="{StaticResource SecondaryButton}" 
                            Click="CancelButton_Click" Margin="0,0,8,0" MinWidth="100"/>
                    <Button Content="Save" Click="SaveButton_Click" MinWidth="100"/>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>
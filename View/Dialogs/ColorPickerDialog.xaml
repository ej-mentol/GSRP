<Window x:Class="GSRP.Views.Dialogs.ColorPickerDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ColorPickerDialog"
        Width="480" Height="450"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize">

    <Window.Resources>
        <Style x:Key="ModernSlider" TargetType="Slider">
            <Setter Property="Height" Value="20"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Slider">
                        <Grid>
                            <Border Name="TrackBackground" Height="6" Background="#2d2e33" CornerRadius="3"/>
                            <Track Name="PART_Track">
                                <Track.Thumb>
                                    <Thumb Width="18" Height="18">
                                        <Thumb.Template>
                                            <ControlTemplate TargetType="Thumb">
                                                <Border Background="#3b82f6" CornerRadius="9" BorderThickness="2" BorderBrush="White">
                                                    <Border.Effect>
                                                        <DropShadowEffect Color="Black" Opacity="0.3" BlurRadius="4" ShadowDepth="1"/>
                                                    </Border.Effect>
                                                </Border>
                                            </ControlTemplate>
                                        </Thumb.Template>
                                    </Thumb>
                                </Track.Thumb>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ModernTextBox Style needed by the dialog -->
        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="#2d2e33"/>
            <Setter Property="Foreground" Value="#f2f2f2"/>
            <Setter Property="BorderBrush" Value="#4b5563"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6">
                            <ScrollViewer x:Name="PART_ContentHost" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#6b7280"/>
                            </Trigger>
                            <Trigger Property="IsKeyboardFocused" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#3b82f6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border Background="#1e1f23" CornerRadius="12" BorderBrush="#2d2e33" BorderThickness="1">
        <Border.Effect>
            <DropShadowEffect Color="Black" Opacity="0.5" BlurRadius="20" ShadowDepth="8"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" 
                    Background="#141518" 
                    CornerRadius="12,12,0,0" 
                    BorderThickness="0,0,0,1" 
                    BorderBrush="#2d2e33" 
                    Padding="20,16" 
                    MouseLeftButtonDown="Header_MouseLeftButtonDown">
                <StackPanel>
                    <TextBlock x:Name="TitleText" 
                               Text="Choose Color" 
                               Foreground="#f2f2f2" 
                               FontSize="18" 
                               FontWeight="SemiBold"/>
                    <TextBlock Text="Select a color for this player" 
                               Foreground="#a6a8ab" 
                               FontSize="13" 
                               Margin="0,4,0,0"/>
                </StackPanel>
            </Border>

            <!-- Content -->
            <Grid Grid.Row="1" Margin="20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="12"/>
                    <ColumnDefinition Width="200"/>
                </Grid.ColumnDefinitions>

                <!-- Left Panel - RGB Controls -->
                <StackPanel Grid.Column="0">
                    <!-- Color Preview -->
                    <Border x:Name="ColorPreview" 
                            Height="60" 
                            Background="Red" 
                            CornerRadius="8" 
                            BorderThickness="1" 
                            BorderBrush="#2d2e33" 
                            Margin="0,0,0,16">
                        <Border.Effect>
                            <DropShadowEffect Color="Black" Opacity="0.2" BlurRadius="4" ShadowDepth="2"/>
                        </Border.Effect>
                    </Border>

                    <!-- RGB Sliders -->
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="25"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="60"/>
                        </Grid.ColumnDefinitions>

                        <!-- Red -->
                        <TextBlock Grid.Row="0" Grid.Column="0" Text="R" Foreground="#ef4444" FontWeight="Bold" FontSize="15" TextAlignment="Center" VerticalAlignment="Top"/>
                        <Slider x:Name="RedSlider" Grid.Row="0" Grid.Column="1" Minimum="0" Maximum="255" 
                                Style="{StaticResource ModernSlider}" Margin="8,0" ValueChanged="ColorSlider_ValueChanged"/>
                        <TextBox x:Name="RedTextBox" Grid.Row="0" Grid.Column="2" Style="{StaticResource ModernTextBox}" 
                                 TextChanged="ColorTextBox_TextChanged"/>

                        <!-- Green -->
                        <TextBlock Grid.Row="1" Grid.Column="0" Text="G" Foreground="#22c55e" FontWeight="Bold" FontSize="15" TextAlignment="Center" VerticalAlignment="Center"/>
                        <Slider x:Name="GreenSlider" Grid.Row="1" Grid.Column="1" Minimum="0" Maximum="255" 
                                Style="{StaticResource ModernSlider}" Margin="8,10,8,0" ValueChanged="ColorSlider_ValueChanged"/>
                        <TextBox x:Name="GreenTextBox" Grid.Row="1" Grid.Column="2" Style="{StaticResource ModernTextBox}" 
                                 TextChanged="ColorTextBox_TextChanged" Margin="0,10,0,0"/>

                        <!-- Blue -->
                        <TextBlock Grid.Row="2" Grid.Column="0" Text="B" Foreground="#3b82f6" FontWeight="Bold" FontSize="15" TextAlignment="Center" VerticalAlignment="Center"/>
                        <Slider x:Name="BlueSlider" Grid.Row="2" Grid.Column="1" Minimum="0" Maximum="255" 
                                Style="{StaticResource ModernSlider}" Margin="8,10,8,0" ValueChanged="ColorSlider_ValueChanged"/>
                        <TextBox x:Name="BlueTextBox" Grid.Row="2" Grid.Column="2" Style="{StaticResource ModernTextBox}" 
                                 TextChanged="ColorTextBox_TextChanged" Margin="0,10,0,0"/>

                        <!-- Hex -->
                        <TextBlock Grid.Row="3" Grid.Column="0" Text="#" Foreground="#a6a8ab" FontWeight="Bold" FontSize="15" Margin="0,16,0,0" HorizontalAlignment="Center" TextAlignment="Center"/>
                        <TextBox x:Name="HexTextBox" Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="2" 
                                 Style="{StaticResource ModernTextBox}" Margin="8,16,0,0" 
                                 TextChanged="HexTextBox_TextChanged" HorizontalContentAlignment="Left"/>
                    </Grid>
                </StackPanel>

                <!-- Right Panel - Presets & Recent -->
                <StackPanel Grid.Column="2">
                    <!-- Presets -->
                    <TextBlock Text="Presets" Foreground="#f2f2f2" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,8"/>
                    <WrapPanel x:Name="PresetsWrapPanel" Orientation="Horizontal" Margin="0,0,0,16"/>

                    <!-- Recent Colors -->
                    <TextBlock Text="Recent" Foreground="#f2f2f2" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,8"/>
                    <WrapPanel x:Name="RecentWrapPanel" Orientation="Horizontal"/>
                </StackPanel>
            </Grid>

            <!-- Footer -->
            <Border Grid.Row="2" 
                    Background="#141518" 
                    CornerRadius="0,0,12,12" 
                    BorderThickness="0,1,0,0" 
                    BorderBrush="#2d2e33" 
                    Padding="20,16">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button x:Name="ClearButton" 
                            Content="Remove Color" 
                            Click="ClearButton_Click" 
                            Style="{StaticResource DangerButton}"
                            MinWidth="120" 
                            Margin="0,0,12,0"/>
                    <Button x:Name="CancelButton" 
                            Content="Cancel" 
                            IsCancel="True" 
                            Click="CancelButton_Click" 
                            Style="{StaticResource SecondaryButton}"
                            MinWidth="80"
                            Margin="0,0,12,0"/>
                    <Button x:Name="OkButton" 
                            Content="OK" 
                            IsDefault="True" 
                            Click="OkButton_Click" 
                            Style="{StaticResource ModernButton}"
                            MinWidth="80"/>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>
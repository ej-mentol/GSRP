<UserControl x:Class="GSRP.View.Controls.ShareablePlayerCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GSRP.View.Controls"
             xmlns:models="clr-namespace:GSRP.Models"
             xmlns:conv="clr-namespace:GSRP.Converters"
             xmlns:ui="http://schemas.modernwpf.com/2019"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance Type=models:Player, IsDesignTimeCreatable=True}"
             Width="450" Height="180" 
             FontFamily="Segoe UI">

    <UserControl.Resources>
        <conv:PathToCachedImageConverter x:Key="PathToCachedImage"/>
        <conv:FlexibleBooleanToVisibilityConverter x:Key="BoolToVis"/>
    </UserControl.Resources>

    <Border CornerRadius="8">
        <Border.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#232528" Offset="0"/>
                <GradientStop Color="#1e1f23" Offset="1"/>
            </LinearGradientBrush>
        </Border.Background>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Avatar -->
            <Border Grid.Column="0" Width="96" Height="96" CornerRadius="8" Margin="20" Background="{Binding FallbackAvatarBrush}">
                <Grid>
                    <Image Width="96" Height="96" Stretch="UniformToFill"
                           Source="{Binding AvatarPath, Converter={StaticResource PathToCachedImage}}">
                        <Image.Style>
                            <Style TargetType="Image">
                                <Setter Property="Visibility" Value="Collapsed" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsAvatarCached}" Value="True">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding IsBusy}" Value="True">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Image.Style>
                        <Image.Clip>
                            <RectangleGeometry Rect="0,0,96,96" RadiusX="8" RadiusY="8"/>
                        </Image.Clip>
                    </Image>

                    <TextBlock Text="{Binding Initials}" Foreground="White" FontWeight="SemiBold"
                               HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="36">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Visibility" Value="Visible" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsAvatarCached}" Value="True">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding AvatarDownloadFailed}" Value="True">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding IsBusy}" Value="True">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>

                    <Border CornerRadius="8"
                            Visibility="{Binding AvatarDownloadFailed, Converter={StaticResource BoolToVis}}">
                        <Border.Background>
                            <SolidColorBrush Color="Black" Opacity="0.6"/>
                        </Border.Background>
                        <TextBlock Text="X"
                                   Foreground="#d1d5db"
                                   FontSize="36"
                                   FontWeight="Bold"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                    </Border>
                </Grid>
            </Border>

            <!-- Player Info -->
            <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="0,20,20,20">
                <!-- Name -->
                <TextBlock Text="{Binding DisplayName, FallbackValue=Player Nickname (Alias)}" Foreground="#f2f2f2" FontSize="20" FontWeight="SemiBold"/>
                <TextBlock Text="{Binding DisplayPersonaName}" Foreground="#a6a8ab" FontSize="14" Margin="0,2,0,10"/>

                <!-- SteamID -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                    <TextBlock Text="SteamID:" Foreground="#8b929a" FontWeight="SemiBold" Margin="0,0,8,0" VerticalAlignment="Center"/>
                    <TextBlock Text="{Binding DisplaySteamId2, FallbackValue=STEAM_0:0:12345678}" Foreground="#f2f2f2" FontFamily="Consolas" VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Registration Date -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <StackPanel.Style>
                        <Style TargetType="StackPanel">
                            <Setter Property="Visibility" Value="Visible"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding HasTimeCreated}" Value="False">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </StackPanel.Style>
                    <TextBlock Text="Registered:" Foreground="#8b929a" FontWeight="SemiBold" Margin="0,0,8,0" VerticalAlignment="Center"/>
                    <TextBlock Text="{Binding RegistrationStatusDisplay}"
                               Foreground="{Binding RegistrationStatusColorBrush}"
                               FontWeight="SemiBold" VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Ban Status -->
                <WrapPanel>
                    <WrapPanel.Resources>
                        <Style TargetType="Border">
                            <Setter Property="Padding" Value="6,3"/>
                            <Setter Property="CornerRadius" Value="4"/>
                            <Setter Property="Margin" Value="0,0,8,4"/>
                        </Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Foreground" Value="#d1d5db"/>
                            <Setter Property="FontSize" Value="11"/>
                            <Setter Property="FontWeight" Value="Medium"/>
                        </Style>
                    </WrapPanel.Resources>

                    <Border Background="#166534" Visibility="{Binding IsClean, Converter={StaticResource BoolToVis}}">
                        <TextBlock Text="CLEAN"/>
                    </Border>

                    <StackPanel Orientation="Horizontal">
                        <StackPanel.Style>
                            <Style TargetType="StackPanel">
                                <Setter Property="Visibility" Value="Visible"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsClean}" Value="True">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </StackPanel.Style>

                        <Border Background="#991b1b" Visibility="{Binding IsVacBanned, Converter={StaticResource BoolToVis}}">
                            <TextBlock Text="{Binding NumberOfVacBans, StringFormat={}{0} VAC BAN(S)}"/>
                        </Border>
                        <Border Background="#991b1b" Visibility="{Binding IsCommunityBanned, Converter={StaticResource BoolToVis}}">
                            <TextBlock Text="COMMUNITY BAN"/>
                        </Border>
                        <Border Background="#854d0e" Visibility="{Binding HasEconomyBan, Converter={StaticResource BoolToVis}}">
                            <TextBlock Text="{Binding EconomyBan, FallbackValue=TRADE BAN}"/>
                        </Border>
                    </StackPanel>
                </WrapPanel>
            </StackPanel>

            <!-- Footer -->
            <TextBlock Text="Generated by GSRP" Foreground="#4b5563" FontSize="10" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="20,0,0,10"/>

        </Grid>
    </Border>
</UserControl>
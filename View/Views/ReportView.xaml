<UserControl x:Class="GSRP.View.Views.ReportView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:conv="clr-namespace:GSRP.Converters"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <conv:EqualityToVisibilityConverter x:Key="EqualityToVisibilityConverter"/>
    </UserControl.Resources>
    <Grid>
        <Grid Background="#1e1f23" Margin="24">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Text="Player Report" 
                       Style="{StaticResource HeaderText}"
                       Margin="0,0,0,20"/>

            <DockPanel Grid.Row="1" Margin="0,0,0,16">
                <Grid DockPanel.Dock="Top" Margin="0,0,0,16">
                    <ComboBox x:Name="ServerComboBox"
                              ItemsSource="{Binding ServerList}"
                              SelectedItem="{Binding SelectedServer}"
                              />
                    <TextBlock Text="Server" Foreground="#6b7280" IsHitTestVisible="False" VerticalAlignment="Center" Margin="12,0,0,0">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding SelectedItem, ElementName=ServerComboBox}" Value="{x:Null}">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </Grid>

                <Grid DockPanel.Dock="Top" Margin="0,0,0,16">
                    <TextBox x:Name="ReportNicknameBox" Text="{Binding ReportNickname, UpdateSourceTrigger=PropertyChanged}"/>
                    <TextBlock Text="Nickname" Foreground="#6b7280" IsHitTestVisible="False" VerticalAlignment="Center" Margin="12,0,0,0">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Text, ElementName=ReportNicknameBox}" Value="">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </Grid>

                <Grid DockPanel.Dock="Top" Margin="0,0,0,16">
                    <TextBox x:Name="ReportSteamIdBox" Text="{Binding ReportSteamId, UpdateSourceTrigger=PropertyChanged}"/>
                    <TextBlock Text="SteamID" Foreground="#6b7280" IsHitTestVisible="False" VerticalAlignment="Center" Margin="12,0,0,0">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Text, ElementName=ReportSteamIdBox}" Value="">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </Grid>

                <TextBlock DockPanel.Dock="Top" Text="What Happened:" Style="{StaticResource SubtleText}" Margin="0,8,0,8"/>

                <TextBox Style="{StaticResource MultilineTextBox}"
                         Text="{Binding ReportDetails, UpdateSourceTrigger=PropertyChanged}"
                         Padding="12"/>
            </DockPanel>

            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Open Screenshots Folder" Style="{StaticResource SecondaryButton}" Margin="0,0,8,0"/>
                <Button Content="Open Videos Folder" Style="{StaticResource SecondaryButton}" Margin="0,0,8,0"/>
                <Button Content="Copy Report" Command="{Binding CopyReportCommand}"/>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>

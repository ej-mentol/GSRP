<Application x:Class="GSRP.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:conv="clr-namespace:GSRP.Converters"
             >
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- Import all style files -->
                <ResourceDictionary Source="Resources/Styles/WindowStyles.xaml"/>
                <ResourceDictionary Source="Resources/Styles/ButtonStyles.xaml"/>
                <ResourceDictionary Source="Resources/Styles/TextStyles.xaml"/>
                <ResourceDictionary Source="Resources/Styles/ControlStyles.xaml"/>
                <ResourceDictionary Source="Resources/Styles/DialogStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <conv:IsNullOrEmptyToVisibilityConverter x:Key="IsNullOrEmptyToVisibilityConverter"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>